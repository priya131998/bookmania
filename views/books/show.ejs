<%- include('../partials/header') %>

    <h2>Book Details</h2>
    <div class = "show">
    <div class = "book">
      <img class="user-cover"src = <%= book.link %> alt= "book cover"/>
      <div class ="new-content">
    <section id="show-page">
        <div>Title: </div>
        <div><%= book.title %></div>
        <div>Author: </div>
        <div><%= book.author.join(', ') %></div>
        <div>Published: </div>
        <div><%= book.publish %></div>
        <div>Description: </div>
        <div><%= book.description %></div>
      </section>
      <a href="/books/<%= book._id %>/edit">Update</a>
    </div>
    </div>
    </div>
    
    <div class = "review-container">
      <br><br><h2>Reviews</h2>
<form id="add-review-form" method="POST"
  action="/books/<%= book._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>
</div>

<div class ="all-reviews">
<% if (book.reviews.length) { %>
  <table>
    <thead>
      <tr>
      	 <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% book.reviews.forEach(function(r) { %>
        <form
                    action="/books/<%= book._id %>/reviews/<%= r._id %>?_method=DELETE"
                    id="delete-form"
                    method="POST"
                >
        <tr>
          <td><button type="submit">X</button></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>
</div>
</body>
</html>